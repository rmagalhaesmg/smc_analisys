# ============================================================================
# SMC Web App - Arquivo de Configuração
# Copie para .env e preencha com suas credenciais
# ============================================================================

# Configurações Gerais
DEBUG=False
APP_NAME="SMC - Sistema de Monitoramento Contínuo"
APP_VERSION="2.3.0"

# API
API_HOST=0.0.0.0
API_PORT=8000

# Telegram
TELEGRAM_BOT_TOKEN=seu_token_aqui
TELEGRAM_CHAT_IDS=["123456789", "987654321"]

# SendGrid (Email)
SENDGRID_API_KEY=seu_api_key_aqui
EMAIL_FROM=noreply@smcanalysis.com
EMAIL_TO_ADDRESSES=["seu_email@example.com"]

# Twilio (WhatsApp)
TWILIO_ACCOUNT_SID=seu_account_sid_aqui
TWILIO_AUTH_TOKEN=seu_auth_token_aqui
TWILIO_PHONE_NUMBER=+55XXXXXXXXXX
WHATSAPP_NUMBERS=["+55XXXXXXXXXX"]

# OpenAI / LLM
OPENAI_API_KEY=sk-...sua_chave_aqui...
LLM_MODEL=gpt-4

# Banco de Dados
DATABASE_URL=sqlite:///./smc.db

# Parâmetros SMC Padrão
SMC_TIPO_ATIVO=1              # 1=WIN, 2=WDO, 3=NASDAQ, 4=ES, etc
SMC_TF_BASE_MINUTOS=5
SMC_MODO_OPERACAO=2           # 1=Conservador, 2=Normal, 3=Agressivo
