# ============================================================================
# SMC Web App - Arquivo de Configuração
# Copie para .env e preencha com suas credenciais
# ============================================================================

# Configurações Gerais
DEBUG=False
APP_NAME="SMC - Sistema de Monitoramento Contínuo"
APP_VERSION="2.3.0"

# API
API_HOST=0.0.0.0
API_PORT=8000

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_IDS=

# SendGrid (Email)
SENDGRID_API_KEY=
EMAIL_FROM=noreply@smcanalysis.com
EMAIL_TO_ADDRESSES=

# Twilio (WhatsApp)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
WHATSAPP_NUMBERS=

# OpenAI / LLM
OPENAI_API_KEY=
LLM_MODEL=gpt-4

# Banco de Dados
DATABASE_URL=sqlite:///./smc.db

# Parâmetros SMC Padrão
SMC_TIPO_ATIVO=1
SMC_TF_BASE_MINUTOS=5
SMC_MODO_OPERACAO=2
SMC_ALERTING_ENABLED=true
SMC_ML_REFINEMENT=true
SMC_LLM_ANALYSIS=false
